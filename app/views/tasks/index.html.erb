<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td>
          <%= link_to 'Destroy',
              task,
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-danger float-right" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= render 'form', task: @task %>
